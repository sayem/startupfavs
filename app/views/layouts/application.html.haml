!!!
%html
  %head
    %title startupfavs
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=utf-8"}
    %meta{'name' => "description", :content => "Favorited tweets from tech entrepreneurs, investors, and various startup folk"}
    %meta{'name' => "google-site-verification", :content => "hHGTH4GK3sxjdTUpseI_W1aDHD0nTZB9y-BK-lluY6M"}

    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'main.css', :media => 'screen'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js', 'rails', 'application'
    = csrf_meta_tag
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24548892-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .container 
      = yield
